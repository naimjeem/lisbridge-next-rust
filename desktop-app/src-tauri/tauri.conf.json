{
  "productName": "LisBridge Desktop",
  "version": "0.1.0",
  "identifier": "com.lisbridge.desktop",
  "build": {
    "beforeDevCommand": "cd .. && npm run dev",
    "beforeBuildCommand": "cd .. && npm run build",
    "devUrl": "http://localhost:3000/dashboard/devices"
  },
  "app": {
    "windows": [
      {
        "title": "LisBridge Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {}
}

